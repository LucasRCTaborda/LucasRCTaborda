import java.util.Scanner;
public class exe2

{public static void main(String args[]){
    Scanner in = new Scanner(System.in);
    double num1,num2,num3,resultado;
    System.out.println(" a seguir informe 3 valores");
    System.out.println("Informe o valor 1");
    num1= in.nextDouble();
    System.out.println("Informe o valor 2");
    num2= in.nextDouble();
    System.out.println("Informe o valor 3");
    num3= in.nextDouble();
     System.out.println("Maior valor " + maior(num1,num2,num3));
     resultado= maior(num1,num2,num3);
     System.out.println("maior  " + (resultado));
}

public static double maior(double v1, double v2 , double v3){
    
    if(v2>v1)v1=v2;
    if (v3>v1)v1=v3;
    
    return v1;
    
  
    
    
    
}
}
